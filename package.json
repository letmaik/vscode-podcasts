{
  "name": "podcasts",
  "displayName": "Podcasts",
  "description": "",
  "version": "0.1.0",
  "author": {
    "name": "Maik Riechert",
    "url": "https://github.com/letmaik"
  },
  "publisher": "letmaik",
  "license": "MIT",
  "icon": "resources/logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "podcast",
    "feed"
  ],
  "bugs": {
    "url": "https://github.com/letmaik/vscode-podcasts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/letmaik/vscode-podcasts.git"
  },
  "homepage": "https://github.com/letmaik/vscode-podcasts",
  "engines": {
    "vscode": "^1.35.0"
  },
  "extensionKind": "ui",
  "activationEvents": [
    "onCommand:podcasts.play",
    "onCommand:podcasts.showDownloaded",
    "onCommand:podcasts.searchEpisodes",
    "onCommand:podcasts.searchPodcasts"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "podcasts.searchEpisodes",
        "title": "Search episodes using Listen Notes",
        "category": "Podcasts"
      },
      {
        "command": "podcasts.searchPodcasts",
        "title": "Search podcasts using Listen Notes",
        "category": "Podcasts"
      },
      {
        "command": "podcasts.showDownloaded",
        "title": "Show downloaded episodes",
        "category": "Podcasts"
      },
      {
        "command": "podcasts.cancelDownload",
        "title": "Cancel Download",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == DOWNLOADING"
      },
      {
        "command": "podcasts.openWebsite",
        "title": "Open episode website",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus != STOPPED"
      },
      {
        "command": "podcasts.play",
        "title": "Play",
        "category": "Podcasts"
      },
      {
        "command": "podcasts.pause",
        "title": "Pause/Unpause",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == PLAYING || podcasts.playerStatus == PAUSED"
      },
      {
        "command": "podcasts.speedup",
        "title": "Speedup",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == PLAYING"
      },
      {
        "command": "podcasts.slowdown",
        "title": "Slowdown",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == PLAYING"
      },
      {
        "command": "podcasts.skipBackward",
        "title": "Skip backward",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == PLAYING"
      },
      {
        "command": "podcasts.skipForward",
        "title": "Skip forward",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == PLAYING"
      },
      {
        "command": "podcasts.stop",
        "title": "Stop",
        "category": "Podcasts",
        "enablement": "podcasts.playerStatus == PLAYING || podcasts.playerStatus == PAUSED"
      }
    ],
    "configuration": {
      "title": "Podcasts",
      "properties": {
        "podcasts.feeds": {
          "type": "array",
          "description": "Podcast feeds available via the Play command.",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Title of the podcast"
              },
              "url": {
                "type": "string",
                "description": "URL of the podcast feed"
              }
            },
            "required": [
              "title",
              "url"
            ]
          },
          "default": [
            {
              "title": "Developer Tea",
              "url": "https://rss.simplecast.com/podcasts/363/rss"
            },
            {
              "title": "Hanselminutes",
              "url": "https://feeds.simplecast.com/gvtxUiIf"
            },
            {
              "title": "Programming Throwdown",
              "url": "http://feeds.feedburner.com/ProgrammingThrowdown"
            },
            {
              "title": "The Changelog",
              "url": "https://changelog.com/podcast/feed"
            },
            {
              "title": "Ratchet and The Geek",
              "url": "https://feeds.simplecast.com/k0fI37e5"
            }
          ]
        },
        "podcasts.player": {
          "type": "string",
          "description": "Path to audio player executable"
        },
        "podcasts.search.sortByDate": {
          "type": "boolean",
          "description": "Whether to sort episodes by date instead of relevance.",
          "default": false
        },
        "podcasts.search.minimumLength": {
          "type": "integer",
          "description": "Minimum episode length in minutes.",
          "default": 0
        },
        "podcasts.search.maximumLength": {
          "type": "integer",
          "description": "Maximum episode length in minutes.",
          "default": 120
        },
        "podcasts.search.language": {
          "type": "string",
          "description": "Limit search results to a specific language. An empty string searches all languages.",
          "default": "English",
          "enum": [
            "",
            "Afar",
            "Abkhazian",
            "Afrikaans",
            "Akan",
            "Albanian",
            "Arabic",
            "Azerbaijani",
            "Bambara",
            "Bashkir",
            "Basque",
            "Belarusian",
            "Bulgarian",
            "Catalan",
            "Chamorro",
            "Chinese",
            "Croatian",
            "Czech",
            "Danish",
            "Dutch",
            "English",
            "Estonian",
            "Faeroese",
            "Finnish",
            "French",
            "Gaelic",
            "Galician",
            "German",
            "Greek",
            "Hebrew",
            "Hindi",
            "Hungarian",
            "Icelandic",
            "Indonesian",
            "Irish",
            "Italian",
            "Japanese",
            "Khmer",
            "Kirghiz",
            "Korean",
            "Latvian",
            "Lithuanian",
            "Macedonian",
            "Malay",
            "Nepali",
            "Northern Sami",
            "Norwegian",
            "Polish",
            "Portuguese",
            "Romanian",
            "Russian",
            "Serbian",
            "Singhalese",
            "Slovak",
            "Slovenian",
            "Spanish",
            "Swahili",
            "Swedish",
            "Thai",
            "Turkish",
            "Twi",
            "Ukranian",
            "Urdu",
            "Vietnamese"
          ]
        },
        "podcasts.search.genres": {
          "type": "array",
          "description": "Genres to include when searching for episodes or podcasts using Listen Notes. An empty list includes all genres.",
          "default": [
            "Technology"
          ],
          "items": {
            "type": "string",
            "enum": [
              "TV & Film",
              "Religion & Spirituality",
              "Sports & Recreation",
              "Games & Hobbies",
              "Health",
              "Business",
              "News & Politics",
              "Arts",
              "Science & Medicine",
              "Education",
              "Government & Organizations",
              "Society & Culture",
              "Technology",
              "Kids & Family",
              "Comedy",
              "Music",
              "Personal Finance",
              "Locally Focused"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch --env.development --info-verbosity verbose",
    "test-compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.136",
    "@types/node": "^10.0.2",
    "@types/request": "2.47.0",
    "@types/request-promise-native": "1.0.14",
    "@types/sax": "^1.2.0",
    "@types/tmp": "0.0.33",
    "@types/xml2js": "^0.4.4",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "vscode": "^1.1.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "find-exec": "^1.0.1",
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "request-promise-native": "^1.0.7",
    "tmp": "^0.1.0",
    "xml2js": "^0.4.19",
    "lodash": "^4.17.10",
    "sax": "^1.2.0"
  }
}
