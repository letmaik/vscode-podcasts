{
    "name": "podcasts",
    "displayName": "Podcasts",
    "description": "",
    "version": "0.1.0",
    "author": {
        "name": "Maik Riechert",
        "url": "https://github.com/letmaik"
    },
    "publisher": "letmaik",
    "license": "MIT",
    "icon": "resources/logo.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "podcast"
    ],
    "bugs": {
        "url": "https://github.com/letmaik/vscode-podcasts/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/letmaik/vscode-podcasts.git"
    },
    "homepage": "https://github.com/letmaik/vscode-podcasts",
    "engines": {
        "vscode": "^1.35.0"
    },
    "extensionKind": "ui",
    "activationEvents": [
        "onCommand:podcasts.play",
        "onCommand:podcasts.searchEpisodes",
        "onCommand:podcasts.searchPodcasts"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "podcasts.searchEpisodes",
                "title": "Search episodes using Listen Notes",
                "category": "Podcasts"
            },
            {
                "command": "podcasts.searchPodcasts",
                "title": "Search podcasts using Listen Notes",
                "category": "Podcasts"
            },
            {
                "command": "podcasts.play",
                "title": "Play",
                "category": "Podcasts"
            },
            {
                "command": "podcasts.stop",
                "title": "Stop",
                "category": "Podcasts"
            }
        ],
        "configuration": {
            "title": "Podcasts",
            "properties": {
                "podcasts.feeds": {
                    "type": "object",
                    "description": "Podcast feeds available via the Play command.",
                    "default": {
                        "Developer Tea": "https://rss.simplecast.com/podcasts/363/rss",
                        "Hanselminutes": "https://feeds.simplecast.com/gvtxUiIf",
                        "Programming Throwdown": "http://feeds.feedburner.com/ProgrammingThrowdown",
                        "The Changelog": "https://changelog.com/podcast/feed",
                        "Ratchet and The Geek": "https://feeds.simplecast.com/k0fI37e5"
                    }
                },
                "podcasts.search.sortByDate": {
                    "type": "boolean",
                    "description": "Whether to sort episodes by date instead of relevance.",
                    "default": false
                },
                "podcasts.search.minimumLength": {
                    "type": "integer",
                    "description": "Minimum audio length in minutes.",
                    "default": 0
                },
                "podcasts.search.maximumLength": {
                    "type": "integer",
                    "description": "Maximum audio length in minutes.",
                    "default": 120
                },
                "podcasts.search.language": {
                    "type": "string",
                    "description": "Limit search results to a specific language. An empty string searches all languages.",
                    "default": "English",
                    "enum": [
                        "Afar",
                        "Abkhazian",
                        "Afrikaans",
                        "Akan",
                        "Albanian",
                        "Arabic",
                        "Azerbaijani",
                        "Bambara",
                        "Bashkir",
                        "Basque",
                        "Belarusian",
                        "Bulgarian",
                        "Catalan",
                        "Chamorro",
                        "Chinese",
                        "Croatian",
                        "Czech",
                        "Danish",
                        "Dutch",
                        "English",
                        "Estonian",
                        "Faeroese",
                        "Finnish",
                        "French",
                        "Gaelic",
                        "Galician",
                        "German",
                        "Greek",
                        "Hebrew",
                        "Hindi",
                        "Hungarian",
                        "Icelandic",
                        "Indonesian",
                        "Irish",
                        "Italian",
                        "Japanese",
                        "Khmer",
                        "Kirghiz",
                        "Korean",
                        "Latvian",
                        "Lithuanian",
                        "Macedonian",
                        "Malay",
                        "Nepali",
                        "Northern Sami",
                        "Norwegian",
                        "Polish",
                        "Portuguese",
                        "Romanian",
                        "Russian",
                        "Serbian",
                        "Singhalese",
                        "Slovak",
                        "Slovenian",
                        "Spanish",
                        "Swahili",
                        "Swedish",
                        "Thai",
                        "Turkish",
                        "Twi",
                        "Ukranian",
                        "Urdu",
                        "Vietnamese"
                    ]
                },
                "podcasts.search.genres": {
                    "type": "array",
                    "description": "Genres to include when searching for episodes or podcasts using Listen Notes. An empty list includes all genres.",
                    "default": [
                        "Technology"
                    ],
                    "items": {
                        "type": "string",
                        "enum": [
                            "TV & Film",
                            "Religion & Spirituality",
                            "Sports & Recreation",
                            "Games & Hobbies",
                            "Health",
                            "Business",
                            "News & Politics",
                            "Arts",
                            "Science & Medicine",
                            "Education",
                            "Government & Organizations",
                            "Society & Culture",
                            "Technology",
                            "Kids & Family",
                            "Comedy",
                            "Music",
                            "Personal Finance",
                            "Locally Focused"
                        ]
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.3.4",
        "vscode": "^1.1.0",
        "@types/node": "^10.0.2",
        "@types/tmp": "0.0.33",
        "@types/request": "2.47.0",
        "@types/request-promise-native": "1.0.14"
    },
    "dependencies": {
        "find-exec": "^1.0.1",
        "node-podcast-parser": "^2.3.0",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.7",
        "tmp": "^0.1.0"
    }
}
