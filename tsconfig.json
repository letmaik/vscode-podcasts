{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "outDir": "out",
        "lib": [
            "es2018"
        ],
        "allowJs": true,
        "sourceMap": true,
        "rootDir": ".",
        "alwaysStrict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ]
}
